  @include('layout.header')


    <section class="container">
      <div class="columns">
        <div class="column is-3">
          <a class="button is-primary is-block is-alt is-large" href="/createPost">New Post</a>
          <aside class="menu">
            <p class="menu-label">
              Tags
            </p>
            <ul class="menu-list">
              <li><span class="tag is-dark is-medium ">Payments</span></li>
            </ul>
          </aside>
        </div>
        <div class="column is-9">
          <div class="box content">
            @each(post in posts)

              <article class="post">
                <a href="/post/{{post.href}}">
                  <h4>{{post.title}}</h4>
                </a>
                <div class="media">
                  <div class="media-content">
                    <div class="content">
                      <p>
                        <a href="#">{{post.user}}</a> replied {{post.updated}} &nbsp;
                        <span class="tag">Question</span>
                      </p>
                    </div>
                  </div>
                  <div class="media-right">
                    <span class="has-text-grey-light"><i class="fa fa-comments"></i> 1</span>
                  </div>
                </div>
              </article>
            @endeach

          </div>
        </div>
      </div>
    </section>
